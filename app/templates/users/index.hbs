<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <div class="panel panel-default">

        <div class="panel-heading info">
          <div class="input-group">
            {{input type=text
              value=searchQuery
              class="form-control"
              placeholder="Search by name"
            }}

            <span class="input-group-btn">
              <button class="btn btn-success" type="button">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>

        </div>

        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-hover">

              <thead>
                <tr>
                  <th class="text-success">User</th>
                  <th class="text-success">email</th>
                  <th class="text-success">created</th>
                  <th class="text-success">type</th>
                  <th class="text-success"></th>
                </tr>
              </thead>

              <tbody>
                {{#each filteredUsers as |user|}}

                  <tr>
                    <td>
                      {{gravatar-image
                        email=user.email
                        title=user.fullName
                        defaultImage='mm'
                        class='img-circle'
                        secure=false
                        size=40
                      }}

                      <span class="m-l-1">
                        {{user.fullName}}
                      </span>
                    </td>

                    <td>{{user.email}}</td>
                    <td>{{model.createdAtDate}}</td>
                    <td>{{capitalize user.type}}</td>
                    <td>
                      {{#link-to 'user.edit' user
                        tagName="button"
                        class="btn btn-sm btn-primary"
                      }}
                        <i class="fa fa-sliders"></i> Edit
                      {{/link-to}}
                    </td>
                  </tr>

                {{else}}
                  <tr>
                    <td>Empty...</td>
                  </tr>
                {{/each}}

              </tbody>

            </table>
          </div> {{!-- end table-responsive --}}
        </div> {{!-- end panel-body --}}
      </div> {{!-- end panel --}}

    </div> {{!-- end col-md-12 --}}
  </div> {{!-- end row --}}
</div> {{!-- end container --}}