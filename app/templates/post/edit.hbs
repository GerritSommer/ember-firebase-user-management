<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <div class="panel panel-default">
        <div class="panel-body">

          <form>

            <div class="form-group">
              <label>
                Title: <br>
                {{input value=model.title
                  type=text
                  class="form-control"
                }}
              </label>
            </div>

            {{#em-wysiwyg configName="bs" as_html=model.body}}

              {{#em-wysiwyg-toolbar class="btn-group"}}
                {{em-wysiwyg-action
                  command="bold"
                  title="Bold (Ctrl/Cmd+B)"
                  icon="fa fa-bold"
                  class="btn-btn-default btn-sm"
                }}
                {{em-wysiwyg-action
                  command="italic"
                  title="Italic (Ctrl/Cmd+I)"
                  icon="fa fa-italic"
                  class="btn-btn-default btn-sm"
                }}
                {{em-wysiwyg-action-format
                  icon="fa fa-text-height"
                  class="btn-btn-default btn-sm"
                  }}
                  {{em-wysiwyg-action
                    command="justifyleft"
                    title="Align Left (Ctrl/Cmd+L)"
                    icon="fa fa-align-left"
                    class="btn-btn-default btn-sm"
                  }}
                  {{em-wysiwyg-action
                    command="justifyright"
                    title="Align Right (Ctrl/Cmd+R)"
                    icon="fa fa-align-right"
                    class="btn-btn-default btn-sm"
                  }}
                  {{em-wysiwyg-action
                    command="undo"
                    title="Undo(Ctrl/Cmd+Z)"
                    icon="fa fa-undo"
                    class="btn-btn-default btn-sm"
                  }}
                  {{em-wysiwyg-action
                    command="redo"
                    title="Redo (Ctrl/Cmd+Y)"
                    icon="fa fa-repeat"
                    class="btn-btn-default btn-sm"
                  }}
                {{em-wysiwyg-action-link
                  title="Insert Link"
                  icon="fa fa-link"
                  class="btn-btn-default btn-sm"
                }}
              {{/em-wysiwyg-toolbar}}

              {{em-wysiwyg-editor}}

              <div class="container-fluid m-t-1">
                <div class="row">

                  <div class="text-right col-md-12">

                    <button class="btn btn-danger" {{action 'cancel' model}} disabled={{model.isSaving}}>
                      Cancel
                    </button>

                    <button class="btn btn-success" {{action 'save' model}} disabled={{model.isSaving}}>
                      {{#if model.isSaving}}
                        <i class="icon-refresh icon-spin"></i>
                      {{else}}
                        Save
                      {{/if}}
                    </button>

                  </div>
                </div>
              </div>

            {{/em-wysiwyg}}

          </form>

        </div> {{!-- end panel --}}
      </div> {{!-- end panel-body --}}


    </div> {{!-- end col-md-12 --}}
  </div> {{!-- end row --}}
</div> {{!-- end container --}}